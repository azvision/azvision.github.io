---
interface Props {
	title: string;
	description: string;
	keywords?: string;
	canonicalUrl?: string;
	ogImage?: string;
}

const { 
	title, 
	description, 
	keywords = "počítání návštěvníků, AI analýza, retail, prodejny, návštěvnost, AZ Vision",
	canonicalUrl = Astro.url.href,
	ogImage = "/camera_detail.jpg"
} = Astro.props;

import '../styles/styles.css';
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="AZ Vision" />
		<meta name="robots" content="index, follow" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#e54b4b" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalUrl} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		
		<!-- Preconnect for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Preload critical CSS -->
		<link rel="preload" href="/src/styles/styles.css" as="style" />
		
		<!-- Open Graph tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="cs_CZ" />
		<meta property="og:site_name" content="AZ Vision" />
		
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-993994636"></script> 
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'AW-993994636'); // Google Ads
			gtag('config', 'G-ZMEEK6ZSKG'); // Google Analytics
		</script>
		
		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />
		
		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "AZ Vision",
				"description": "AZ Vision Footfall System - pokročilý systém pro analýzu návštěvnosti pomocí AI kamer. Nabízíme přesné počítání osob, cloudový portál pro správu více poboček a snadnou integraci s existující infrastrukturou.",
				"url": "https://www.azvision.cz",
				"logo": "https://www.azvision.cz/logo_light.png",
				"contactPoint": {
					"@type": "ContactPoint",
					"contactType": "sales",
					"availableLanguage": "Czech"
				},
				"areaServed": "CZ",
				"serviceType": "AI Analytics for Retail"
			}
		</script>
		
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
