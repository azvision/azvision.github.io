---

interface Props {
	title: string;
	description: string;
	keywords?: string;
	canonicalUrl?: string;
	ogImage?: string;
	lang?: string;
	ogLocale?: string;
}


const {
	title,
	description,
	keywords = "počítání návštěvníků, AI analýza, retail, prodejny, návštěvnost, AZ Vision",
	canonicalUrl = Astro.url.href,
	ogImage = "/og-image.jpg",
	lang = "cs",
	ogLocale = "cs_CZ"
} = Astro.props;

import '../styles/styles.css';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="AZ Vision" />
		<meta name="robots" content="index, follow" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#e54b4b" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalUrl} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		
		<!-- Preconnect for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- Bootstrap CSS (CDN) - no integrity attribute to avoid blocking if hash mismatches locally -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
		
		<!-- Prevent navbar flash on mobile - must be inline to load immediately -->
		<style>
			@media (max-width: 991.98px) {
				#mainNavbar:not(.show) {
					display: none !important;
				}
			}
		</style>
		

		<!-- Open Graph tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content={ogLocale} />
		<meta property="og:site_name" content="AZ Vision" />
		
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-993994636"></script> 
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'AW-993994636'); // Google Ads
			gtag('config', 'G-ZMEEK6ZSKG'); // Google Analytics
		</script>
		
		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />
		
		<!-- Structured Data -->
			<script type="application/ld+json">
				{
					"@context": "https://schema.org",
					"@type": "Organization",
					"name": "AZ Vision",
					"description": description,
					"url": canonicalUrl,
					"logo": ogImage,
					"contactPoint": {
						"@type": "ContactPoint",
						"contactType": "sales",
						"availableLanguage": lang === "cs" ? "Czech" : "English"
					},
					"areaServed": lang === "cs" ? "CZ" : "EN",
					"serviceType": "AI Analytics for Retail"
				}
			</script>
		
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" aria-label={lang === "en" ? "Main navigation" : "Hlavní navigace"}>
				<div class="container">
						<a class="navbar-brand" href="/">AZ Vision</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="mainNavbar">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item"><a class="nav-link" href="#hero">{lang === "en" ? 'Home' : 'Úvod'}</a></li>
							<li class="nav-item"><a class="nav-link" href="#about">{lang === "en" ? 'About' : 'O nás'}</a></li>
							<li class="nav-item"><a class="nav-link" href="#features">{lang === "en" ? 'How it works' : 'Jak to funguje'}</a></li>
							<li class="nav-item"><a class="nav-link" href="#how-it-works">{lang === "en" ? 'Implementation' : 'Implementace'}</a></li>
							<li class="nav-item"><a class="nav-link" href="#references">{lang === "en" ? 'References' : 'Reference'}</a></li>
							<li class="nav-item"><a class="nav-link" href="#contact">{lang === "en" ? 'Contact' : 'Kontakt'}</a></li>
						</ul>
						<div class="d-flex align-items-center">
							<LanguageSwitcher current={lang} inline />
						</div>
					</div>
				</div>
			</nav>
		</header>
		<slot />

		<script is:inline>
			// Ensure target sections have IDs for anchor navigation
			[
				{id: 'hero', selector: '.hero'},
				{id: 'about', selector: '.product-overview'},
				{id: 'features', selector: '.features'},
				{id: 'how-it-works', selector: '.how-it-works'},
				{id: 'references', selector: '.references'},
				{id: 'contact', selector: '#contact'}
			].forEach(({id, selector}) => {
				const el = document.querySelector(selector);
				if (el && !el.id) el.id = id;
			});

			// Prevent navbar from expanding on mobile during page load
			const navbar = document.getElementById('mainNavbar');
			const isMobile = () => window.innerWidth < 992;
			
			if (navbar && isMobile()) {
				navbar.classList.remove('show');
				
				// Prevent Bootstrap from auto-expanding during initialization
				const observer = new MutationObserver(() => {
					if (isMobile() && navbar.classList.contains('show')) {
						navbar.classList.remove('show');
					}
				});
				
				observer.observe(navbar, { attributes: true, attributeFilter: ['class'] });
				setTimeout(() => observer.disconnect(), 2000);
			}
		</script>

		<!-- Bootstrap JS bundle (CDN) -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		
		<script is:inline>
			// Auto-collapse navbar when clicking nav links on mobile
			document.addEventListener('DOMContentLoaded', () => {
				const navbar = document.getElementById('mainNavbar');
				const toggler = document.querySelector('.navbar-toggler');
				
				if (!navbar || !toggler) return;
				
				document.querySelectorAll('.nav-link').forEach(link => {
					link.addEventListener('click', () => {
						// Only collapse if on mobile (toggler is visible)
						if (window.getComputedStyle(toggler).display !== 'none') {
							window.bootstrap?.Collapse?.getInstance(navbar)?.hide();
						}
					});
				});
			});
		</script>

	</body>
	</html>
