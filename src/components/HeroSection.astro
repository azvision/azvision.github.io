---
import { Image } from 'astro:assets';
interface Props { lang?: string }
const { lang = 'cs' } = Astro.props as Props;
---

<section class="hero">
  <Image src="/logo_light.png" alt="AZ Vision logo" class="logo-img" width={234} height={180} />

  <h1>{lang === 'en' ? 'Do you know how many people your advertising actually brought in?' : 'Víte, kolik lidí vaše reklama přivedla?'}</h1>

  <p class="hero-subtitle">{lang === 'en' ? 'Stop guessing results — show the real impact of your marketing campaigns with AZ Vision’s smart footfall system.' : 'Přestaňte hádat výsledky — ukažte skutečný dopad vašich marketingových kampaní pomocí chytrého footfall systému AZ Vision.'}</p>

  <Image src="/camera_detail.jpg" alt={lang === 'en' ? 'Camera detail view' : 'Detail kamery'} class="hero-img" width={234} height={245} />

  <div class="features-cta-wrapper">
    <a href="#contact" class="hero-cta-btn">{lang === 'en' ? 'Do you want offer?' : 'Chcete nabídku?'}</a>
  </div>
</section>
