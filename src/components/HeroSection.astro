---
import { Image } from 'astro:assets';
interface Props { lang?: string }
const { lang = 'cs' } = Astro.props as Props;
---

<section class="hero">
  <Image src="/logo_light.png" alt="AZ Vision logo" class="logo-img" width={234} height={180} />
  <h1>{lang === 'en' ? 'AI Footfall System' : 'AI Footfall System'}</h1>
  <p class="hero-subtitle">{lang === 'en' ? 'Accurate people counting for retail' : 'Přesné počítání návštěvníků pro retail'}</p>
  <Image src="/footfall-preview.jpg" alt={lang === 'en' ? 'View of a retail space with visitors' : 'Pohled na retail prostor s návštěvníky'} class="hero-img" width={520} height={286} />
</section>
